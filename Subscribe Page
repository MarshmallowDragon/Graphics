mouseOver = function(){
background(230, 0, 0);
los(15);
};

mouseOut = function(){
background(189, 243, 255);
dragonWings(0, -5);
marshmallow(200, 195);
dragonTail(181, 261);
dragonPaws(0, -5);
subtext();
};
